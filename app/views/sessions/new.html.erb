<h2>Bejelentkezés</h2>

<% if flash.alert %>
<p style="color: red;">
  <%= flash.alert %>
</p>
<% end %>

<p>
  <%= flash.notice %>
</p>

<div>
  <%= form_tag login_path do %>
  <div class="field">
    <%= label_tag :email %> <br />
    <%= text_field_tag :email %>
  </div>
  <div class="field">
    <%= label_tag :password, "Jelszó" %> <br />
    <%= password_field_tag :password %>
  </div>
  <div class="field">
    <%= submit_tag "Bejelentkezés" %>
  </div>

  <% end %>
</div>